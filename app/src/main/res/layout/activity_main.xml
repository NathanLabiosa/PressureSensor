<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewValue"
        android:layout_width="158dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="136dp"
        android:layout_marginBottom="54dp"
        android:text="Waiting for data..."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/semicircleGaugeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pressure_sensor.SemicircleGaugeView
        android:id="@+id/semicircleGaugeView"
        android:layout_width="379dp"
        android:layout_height="181dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="241dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValue" />


</androidx.constraintlayout.widget.ConstraintLayout>