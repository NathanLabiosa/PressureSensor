<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:clipToOutline="true"
    android:fillViewport="true"
    android:background="@drawable/rounded_bottom_sheet_bg">

    <!-- Top row: "Log Symptoms" text + Close (X) button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/logSymptomsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Symptoms"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="@font/red_hat_regular"
            />

        <TextView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="8dp"
            android:fontFamily="@font/red_hat_regular"/>
    </LinearLayout>

    <!-- "Pain" label -->
    <TextView
        android:id="@+id/painLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pain Level"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/red_hat_regular"/>

    <!-- Row of pain buttons (1..5).
         You can add sub-labels above each button in various ways;
         here's a simplified approach with separate text views above them. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:fontFamily="@font/red_hat_regular">


        <!-- You could also place "No pain" / "Moderate" / "Extreme" above the relevant button.
             For brevity, here's a single row of 5 buttons. -->
        <android.widget.Button
            android:id="@+id/painButton1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/painButton2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/painButton3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3"
            android:fontFamily="@font/red_hat_regular"
            style="@style/CustomPainButton"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/painButton4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/painButton5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Sub-label row for the 1,3,5? Example: -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No Pain"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/red_hat_regular"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Moderate"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/red_hat_regular"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Extreme"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Burning Section -->
    <LinearLayout
        android:id="@+id/burningSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/burningLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burning:  "
            android:textColor="@color/white"
            android:fontFamily="@font/red_hat_regular"
            android:textSize="16sp" />

        <Button
            android:id="@+id/burningYesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/burningNoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <!-- Numbness Section -->
    <LinearLayout
        android:id="@+id/numbnessSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/numbnessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numbness: "
            android:textColor="@color/white"
            android:fontFamily="@font/red_hat_regular"
            android:textSize="16sp" />

        <Button
            android:id="@+id/numbnessYesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"

            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/numbnessNoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Tingling Section -->
    <LinearLayout
        android:id="@+id/tinglingSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tinglingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tingling \n(pins and needles): "
            android:textColor="@color/white"
            android:fontFamily="@font/red_hat_regular"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tinglingYesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/tinglingNoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            style="@style/CustomPainButton"
            android:fontFamily="@font/red_hat_regular"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/otherSymptomsButton"
        style="@style/CustomPainButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Other Symptoms"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/otherSymptomsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type other symptoms..."
        android:textColorHint="@color/white"
        android:visibility="gone"
        android:fontFamily="@font/red_hat_regular"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />


</LinearLayout>
