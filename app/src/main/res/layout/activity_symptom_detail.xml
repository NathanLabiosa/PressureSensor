<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->

    <!-- Pain Level Label -->

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/red_hat_regular"
        android:text="Logged Symptom Details"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/closeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Date/Time TextView -->

    <TextView
        android:id="@+id/dateTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/red_hat_regular"
        android:text="Date/Time"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/painLevelLabel"
        app:layout_constraintTop_toBottomOf="@+id/detailTitle" />

    <TextView
        android:id="@+id/dateTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/red_hat_regular"
        android:text="N/A"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/dateTimeLabel"
        app:layout_constraintStart_toStartOf="@+id/painLevelValue" />

    <TextView
        android:id="@+id/painLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/red_hat_regular"
        android:text="Pain Level: "
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/painLevelValue"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/painLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/red_hat_regular"
        android:text="N/A"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/painLevelLabel"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeLabel" />

    <TextView
        android:id="@+id/otherSymptomsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/red_hat_regular"
        android:text="Other Symptoms: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/painLevelLabel"
        app:layout_constraintTop_toBottomOf="@+id/painLevelLabel" />

    <TextView
        android:id="@+id/otherSymptomsValue"
        android:layout_width="0dp"
        android:layout_height="221dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/red_hat_regular"
        android:text="N/A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/detailTitle"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherSymptomsLabel" />

    <TextView
        android:id="@+id/closeButton"
        android:layout_width="38dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/red_hat_regular"
        android:padding="8dp"
        android:text="X"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>